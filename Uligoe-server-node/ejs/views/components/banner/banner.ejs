<ul class="banner">
    <% imgList.forEach( item=> { %>
        <li class="banner-item"><img class="<%= item.name %>" src="<%= item.url %>"></li>
        <% }); %>
</ul>

<script>
    (() => {
        const oBanner = document.querySelector('.banner');
        const bannerNum = JSON.parse('<%- JSON.stringify(imgList) %>').length;

        let bannerWidth = document.body.clientWidth;
        let current = 0;

        window.addEventListener('resize', () => {
            bannerWidth = document.body.clientWidth;
        })

        const bannerScroll = setInterval(() => {
            oBanner.style.left = `-${bannerWidth * current++}px`;
            if (current > bannerNum - 1) {
                current = 0;
            }
        }, 2000)
    })()
</script>

<style>
    .banner {
        position: relative;
        left: 0px;
        height: 100%;
        width: 100%;
        display: flex;
        transition: 0.5s;
    }

    .banner .banner-item {
        width: 100%;
        height: 100%;
        flex-shrink: 0;
    }

    .banner .banner-item img {
        max-height: 100%;
        max-width: calc(100% - 30px);
    }
</style>