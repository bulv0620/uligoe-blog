<script>
    (() => {
        const oHeader = document.querySelector('.header');
        document.addEventListener('click', () => {
            hideMenu();
        })
        document.addEventListener("scroll", () => {
            hideMenu();
            const opacity = window.scrollY / 2;
            oHeader.style.background = `rgba(255, 255, 255, ${opacity < 100 ? opacity : 100}%)`
        });

        const oMenuIcon = document.querySelector('.menu-icon');
        const oMenu = document.querySelector('.menu');
        oMenuIcon.addEventListener('click', (e) => {
            e.stopPropagation();
            if (oMenu.classList.contains('active')) {
                hideMenu();
            }
            else {
                showMenu();
            }
        })

        function hideMenu() {
            oMenu.classList.remove(['active']);
        }
        function showMenu() {
            oMenu.classList.add(['active']);
        }
    })()
</script>

